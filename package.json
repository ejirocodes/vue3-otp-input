      "import": "./dist/vue3-otp-input.js",
      "require": "./dist/vue3-otp-input.umd.cjs"
    }
  },
  "peerDependencies": {
    "vue": "^3.0.*"
  },
  "dependencies": {
    "vue": "^3.4.27"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.6",
